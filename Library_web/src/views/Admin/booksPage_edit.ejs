
<!-- Cập nhật sách -->
<h3>Cập nhật Sách</h3>
<form id="customForm" action="/books/update" method="POST">
    <input type="text" name="id" placeholder="ID Sách" required>
    <input type="text" name="title" placeholder="Tiêu đề">
    <input type="text" name="author" placeholder="Tác giả">
    <input type="text" name="publisher" placeholder="Nhà xuất bản">
    <input type="text" name="category" placeholder="Thể loại">
    <button type="submit" id="submitButton">Cập nhật</button>
</form>